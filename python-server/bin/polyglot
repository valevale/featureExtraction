#!/bin/bash

sudo apt-get install python-pip python-dev
sudo apt-get install python-numpy libicu-dev
sudo pip install virtualenv


echo "Create Polyglot Folder"
cd polyglot-server
virtualenv flask
flask/bin/pip install flask
flask/bin/pip install polyglot

echo "Set Polyglot Resource Folder"
wget https://www.dropbox.com/s/olr0916jn5aaezl/polyglot_data.zip?dl=0 -P ~ -O $HOME/polyglot_data.zip
unzip $HOME/polyglot_data.zip
rm $HOME/polyglot_data.zip
chmod a+x app.py
./app.py
